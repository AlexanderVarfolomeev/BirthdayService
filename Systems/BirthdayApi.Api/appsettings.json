{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MainConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=BirthdayApi;MultipleActiveResultSets=true"
  },
  "General": {
    "SwaggerVisible": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    },
    "IdentityServer": {
      "Url": "http://localhost:5196",
      "ClientId": "frontend",
      "ClientSecret": "secret"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
